<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= link_to t('views.common.title_index', name: User.model_name.human.downcase), users_path, class: 'navbar-link' %> |
        <%= link_to t('views.common.title_index', name: Book.model_name.human.downcase), books_path, class: 'navbar-link' %> |
        <%= link_to t('views.common.title_edit_account'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= button_to t('views.common.titile_log_out'), destroy_user_session_path, method: :delete, class: 'navbar-link' %>
      <% else %>
        <%= link_to t('views.common.title_sign_up'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('views.common.title_log_in'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
