<%- if controller_name != 'sessions' %>
  <%= link_to t('views.common.title_log_in'), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('views.common.title_sign_up'), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('views.common.title_forgot_your_password'), new_password_path(resource_name) %><br />
<% end %>
