<div id="<%= dom_id report %>">
  <p>
    <strong><%= Report.human_attribute_name(:title) %>:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:content) %>:</strong>
    <%= format_content report.content %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:user) %>:</strong>
    <%= link_to report.user.name_or_email, report.user %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:created_on) %>:</strong>
    <%= l report.created_on %>
  </p>

  <p>
    <strong><%= Mention.human_attribute_name(:mentioned_report) %></strong><br>
    <% report.mentioned_reports.each do |mentioned_report| %>
      <%= link_to mentioned_report.title, mentioned_report %><br>
    <% end %>
  </p>

</div>
