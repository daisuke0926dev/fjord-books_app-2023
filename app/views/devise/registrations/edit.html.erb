<h2><%= t('views.common.title_edit', name: User.model_name.human.downcase) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code %>
  </div>

    <div class="field">
    <%= f.label :addr %><br />
    <%= f.text_field :addr %>
  </div>

    <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_area :biography %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('views.common.leave_blank_msg_on_password_form') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('views.common.we_need_your_password_to_confirm') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div><%= button_to t('views.common.destroy', name: User.model_name.human.downcase), registration_path(resource_name), data: { confirm: "OK?", turbo_confirm: "OK?" }, method: :delete %></div>

<%= link_to t('views.common.simple_back'), :back %>
